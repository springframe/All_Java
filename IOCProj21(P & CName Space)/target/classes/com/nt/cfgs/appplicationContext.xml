/>
<bean id="emp" class="com.nt.beans.Emp"
p:eno="100"
p:ename="Raja"
p:dept-ref="dept"
/>
<bean id="dept" class="com.nt.beans.Dept"
c:deptno="200"
c:name="Rani"
c:dop-ref="dt"
/>

</beans>